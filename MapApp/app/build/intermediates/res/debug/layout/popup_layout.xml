<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/popup"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:orientation="vertical">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:siBorderWidth="0dp"
        android:layout_centerHorizontal="true"
        app:siBorderColor="#fff"/>

    <TextView
        android:id="@+id/nameT"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/desgT"
        android:layout_below="@+id/nameT"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cd2962"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/emailT"
        android:background="#EBEBEB"
        android:layout_below="@+id/desgT"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="0dp"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:textColor="#9B9B9B"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>


</RelativeLayout><!-- From: file:/home/user/AndroidStudioProjects/MapApp/app/src/main/res/layout/popup_layout.xml -->