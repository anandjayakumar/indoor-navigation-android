<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emp_lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:foreground="@drawable/shape_window_dim"
    tools:context="com.app2.aar.databaseaccess2.SQLiteActivity">

    <RelativeLayout  android:layout_width="match_parent"
        android:id="@+id/empPop"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/searchViewHolder"
            android:layout_alignParentTop="true"
            android:background="#1976d3">

            <EditText
                android:drawableLeft="@drawable/ictop_search"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:drawablePadding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:id="@+id/searchView1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_corner"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
        <ListView
            android:id="@+id/listEmp"
            android:layout_below="@+id/searchViewHolder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/labelList"
            android:layout_below="@+id/searchViewHolder" />

    </RelativeLayout>
</FrameLayout><!-- From: file:/home/user/AndroidStudioProjects/MapApp/app/src/main/res/layout/activity_employee.xml -->