<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anand.mapapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.anand.mapapp.Activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.DecoderActivity"
            android:label="@string/title_activity_decoder" >
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.PlaceActivity"
            android:label="@string/title_activity_place"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.TabsActivity"
            android:label="@string/title_activity_tabs"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.EmployeeActivity"
            android:label="@string/title_activity_employee"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.anand.mapapp.Activities.FavouriteActivity"
            android:label="@string/title_activity_favourite" >
        </activity>
    </application>

</manifest>