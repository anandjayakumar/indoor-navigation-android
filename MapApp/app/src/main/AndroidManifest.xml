<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anand.mapapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DecoderActivity"
            android:label="@string/title_activity_decoder" >
        </activity>
        <activity
            android:name=".LogActivity"
            android:label="@string/title_activity_log" >
        </activity>
        <activity
            android:name=".PlaceActivity"
            android:label="@string/title_activity_place"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".TabsActivity"
            android:label="@string/title_activity_tabs"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".EmployeeActivity"
            android:label="@string/title_activity_employee"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>
