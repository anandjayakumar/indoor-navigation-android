<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app2.aar.databaseaccess2.SQLiteActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/searchViewHolder"
        android:layout_alignParentTop="true"
        android:background="#1976d3">

        <EditText
            android:drawableLeft="@drawable/ictop_search"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:drawablePadding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:id="@+id/searchView2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/round_corner"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/listView2"
        android:layout_below="@+id/searchViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/labelList2"
        android:layout_below="@+id/searchViewHolder" />
</RelativeLayout>